@model App.Models.InputModels.CreatePageInputModel

@Styles.Render("~/bundles/codemirror-styles")
@Scripts.Render("~/bundles/codemirror-scripts")


<div class="row">
    <div class="col-md-11">
        <h3>@ViewBag.Title</h3>
        <hr />
    </div>
</div>
@using (Html.BeginForm((string)ViewBag.FormMode, "Pages", FormMethod.Post, new { @class = "form-horizontal " }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "dab-input-label" })
                @Html.ValidationMessageFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Пр: Често задавани въпроси" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Summary, new { @class = "dab-input-label" })
                @Html.ValidationMessageFor(model => model.Summary)
                @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Content, new { @class = "dab-input-label" })
                @Html.ValidationMessageFor(model => model.Content)
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrlName, new { @class = "dab-input-label" })
                @Html.ValidationMessageFor(model => model.UrlName)
                @Html.EditorFor(model => model.UrlName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    @ViewBag.FormModeText
                </button>
            </div>
        </div>
    </div>
}