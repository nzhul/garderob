@using App.Models.Orders;
@model IEnumerable<OrderViewModelSimple>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>№</th>
			<th>Поръчка:</th>
			<th>Клиент:</th>
			@*<th><i class="fa fa-envelope"></i></th>*@
			<th class="text-center"><i class="fa fa-trash-o"></i></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var order in Model)
		{
			<tr>
				<td><a href="@Url.Action("Edit", "Orders", new { id = order.Id })">@order.Id</a></td>
				<td><a href="@Url.Action("Edit", "Orders", new { id = order.Id })">@order.Title</a></td>
				<td>
					@if (order.ClientId != null)
					{
						<a href="@Url.Action("Edit", "Clients", new { id = order.ClientId })">@order.ClientFullName</a>
					}
					else
					{
						<span>- Без регистрация -</span>
					}

				</td>
				@*<td><a href="@Url.Action("NotifyClient", "Orders", new { id = order.Id,  })"><i class="fa fa-envelope-o"></i></a></td>*@
				<td class="text-center">
					<a href="@Url.Action("Delete", new { id = order.Id })" class="confirm-link"><i class="fa fa-trash-o"></i></a>
				</td>
			</tr>
		}
	</tbody>
</table>