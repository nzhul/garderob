@using App.Models;
@using App.Web.Areas.Administration.Models;
@model ClientsMasterModel

@{
	ViewBag.Title = "Клиенти";
}

<div class="row">
	<div class="col-md-12">
		<h3>@ViewBag.Title</h3>
		<table class="table table-striped table-hover ">
			<thead>
				<tr>
					<th>Име</th>
					<th>Email</th>
					<th class="centered"><i class="fa fa-cogs"></i></th>
				</tr>
			</thead>
			<tbody>
				@Html.Partial("Partials/_Clients", Model.ActiveUsers, new ViewDataDictionary { { "ActiveUsers", "true" } })
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@Html.Partial("_Pager", ViewBag.PagingData as PagingData)
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Блокирани @ViewBag.Title</h3>
		<table class="table table-striped table-hover ">
			<thead>
				<tr>
					<th>Име</th>
					<th>Email</th>
					<th class="centered"><i class="fa fa-cogs"></i></th>
				</tr>
			</thead>
			<tbody>
				@Html.Partial("Partials/_Clients", Model.InActiveUsers, new ViewDataDictionary { { "ActiveUsers", "false" } })
			</tbody>
		</table>
	</div>
</div>