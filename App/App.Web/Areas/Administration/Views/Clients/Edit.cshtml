@using App.Web.Areas.Administration.Models.InputModels
@model EditClientInputModel
@{
	ViewBag.Title = "Клиент: Редакция";
}

<div class="container">
	<h2>Edit</h2>
	<div class="row">
		@using (Html.BeginForm("Edit", "Clients", FormMethod.Post, new { @class = "form-horizontal " }))
		{
			<div class="col-md-7">
				@Html.LabelFor(model => model.FirstName, new { @class = "dab-input-label" })
				@Html.ValidationMessageFor(model => model.FirstName)
				@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Пр: Съевата дупка" } })
			</div>
		}
	</div>
</div>