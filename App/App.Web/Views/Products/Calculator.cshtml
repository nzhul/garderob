				{
					Dictionary<string, string> data = new Dictionary<string, string>();
					data.Add("price", material.Price.ToString());
					
					@Html.ByteImage(material.Image.Small, material.Name, "js-base-surface-material", material.Id.ToString(), material.Name, data)
				}
			</div>
		</div>
