		<div class="col-md-6">
			<div class="order-category">
				Плоча за основа: <span class="js-calculator-error" data-error-index="1"></span><br />
				@foreach (var material in Model.SurfaceMaterials)
				{
					Dictionary<string, string> data = new Dictionary<string, string>();
					data.Add("price", material.Price.ToString());
					
					@Html.ByteImage(material.Image.Small, material.Name, "js-base-surface-material", material.Id.ToString(), string.Format("{0} | Цена: {1} лв", material.Name, material.Price), data)
				}
			</div>
		</div>
		<div class="col-md-6">
			<div class="order-category">
				Плоча за врати: <span class="js-calculator-error" data-error-index="2"></span><br />
